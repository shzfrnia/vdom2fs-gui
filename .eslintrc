{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:vue/vue3-essential", "standard", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue", "prettier"],
  "rules": {
    "semi": [2, "never"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxSingleQuote": true,
        "arrowParens": "always",
        "max-len": ["error", 140, 2],
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "endOfLine": "auto"
      },
      {
        "usePrettierrc": true
      }
    ]
  }
}
